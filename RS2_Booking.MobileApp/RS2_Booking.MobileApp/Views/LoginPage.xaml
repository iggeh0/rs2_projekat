<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RS2_Booking.MobileApp.Views.LoginPage"
             xmlns:ViewModels="clr-namespace:RS2_Booking.MobileApp.ViewModels">
    <ContentPage.BindingContext>
        <ViewModels:LoginVM></ViewModels:LoginVM>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <Label Text="Dobrodošli"
                VerticalOptions="Start" 
                HorizontalOptions="Center" Margin="55" FontSize="Large"/>
            
            <Label Text="Korisničko ime:" HorizontalOptions="Center">
            </Label>
            <Entry Text="{Binding Username}"></Entry>
            <Label Text="Šifra:" HorizontalOptions="Center">
            </Label>
            <Entry Text="{Binding Password}"></Entry>
            <Button Command="{Binding LoginCommand}" Text="Login"></Button>
            <Button Text="Registracija"></Button>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>